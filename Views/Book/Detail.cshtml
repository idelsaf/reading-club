@model Book

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <img class="img" width="600" height="400" src="@Model.Image" alt="">
        </div>

        <div class="col-md-4">
            <h3 class="card-title">@Model.Title</h3>
            <h5 class="card-title mb-2">@Model.Author</h5>
            <p class="card-text">@Model.Description</p>
            <h5 class="card-subtitle mb-2">Genre</h5>
            <ul class="list-unstyled">
                <li>@Model.Genre</li>
            </ul>
            <h1></h1>
            <a href="AddView" class="btn btn-secondary">Add view</a>
        </div>
    </div>
    <h3 class="my-4">May be other books</h3>

    <div class="row">

        <div class="col-md-3 col-sm-6 mb-4">
